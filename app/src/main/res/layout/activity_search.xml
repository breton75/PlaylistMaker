<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/layout_global"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:padding="0dp"
        style="@style/Theme.settings">

        <LinearLayout
            android:id="@+id/layout_panel_header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="top">

            <LinearLayout
                android:id="@+id/layout_title"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="top">

                <ImageButton
                    android:id="@+id/btn_arrow_back"
                    style="@style/settings_btn_back">
                </ImageButton>

                <TextView
                    android:id="@+id/text_view_title"
                    android:text="@string/btn_search"
                    style="@style/title_other">
                </TextView>

            </LinearLayout>

            <Button android:id="@+id/btn_search_list"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="right|center"
                android:layout_margin="4dp"
                android:visibility="invisible">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_search"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="top">


            <LinearLayout
                android:id="@+id/layout_edit_left"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:gravity="left|center_vertical">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/search"
                    android:visibility="visible">
                </ImageView>

                <EditText
                    android:id="@+id/inputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:hint="@string/btn_search"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="@color/light_icon_frg"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    style="@style/serach_edit">
                </EditText>

            </LinearLayout>
            <!-- layout_edit_left -->

            <LinearLayout
                android:id="@+id/layout_edit_right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:gravity="left|center_vertical">

                <ImageButton
                    android:id="@+id/btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:visibility="visible">
                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_filter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:visibility="visible">
                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_voice"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:visibility="visible">
                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_clear"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:visibility="visible">
                </ImageButton>

            </LinearLayout>
            <!-- layout_edit_right -->

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>