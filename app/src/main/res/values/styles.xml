<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="title_main">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_other" parent="Theme.settings">
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center</item>
    </style>

    <style name="main_big_button" parent="Theme.main_big_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
    </style>


    <style name="settings_item" parent="Theme.settings_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/settings_font_size</item>
    </style>

    <style name="settings_item_icon" parent="Theme.settings_item_icon">
        <item name="android:layout_width">@dimen/settings_item_btn_width</item>
        <item name="android:layout_height">@dimen/settings_item_btn_height</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="settings_btn_back" parent="Theme.settings_item_icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="search_edit" parent="Theme.search_edit">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:hint">@string/btn_search</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="search_edit_btn" parent="Theme.search_edit_btn">
        <item name="android:layout_width">@dimen/icon_size_24</item>
        <item name="android:layout_height">@dimen/icon_size_24</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>