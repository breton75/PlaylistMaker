<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.main" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">#3772E7</item>
    </style>

    <style name="Theme.settings" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.main_big_button" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="Theme.settings_item" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.settings_item_icon" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:background">@color/light_icon_bkg</item>
        <item name="iconTint">@color/light_icon_frg</item>
    </style>

    <style name="Theme.settings_item_switch" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:thumbTint">@color/light_switch_frg</item>
        <item name="android:trackTint">@color/light_switch_bkg</item>
    </style>

</resources>