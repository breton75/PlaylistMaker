<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.main" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/dark_background_0</item>
        <item name="android:foregroundTint">#FFFFFF</item>
    </style>

    <style name="Theme.settings" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/dark_background_0</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.main_big_button" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="Theme.settings_item" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_background_0</item>
    </style>

    <style name="Theme.settings_item_icon" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:background">@color/dark_icon_bkg</item>
        <item name="tint">@color/dark_icon_frg</item>
    </style>

    <style name="Theme.settings_item_switch" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:thumbTint">@color/dark_edit_cursor</item>
        <item name="android:trackTint">@color/dark_background_1</item>
    </style>

    <style name="Theme.search_edit" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="android:textColor">@color/dark_edit_text</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableTint">@color/dark_edit_text</item>
        <item name="tint">@color/dark_edit_text</item>
        <item name="android:textColorHint">@color/dark_edit_text</item>
    </style>
</resources>